<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
  <h1>Recipes</h1>
  <table class="table">
      <tr>
        <th>Title</th>
        <th>Chef</th>
        <th>Directions</th>
        <th>Ingredients</th>
        <th>Prep Time</th>
        <th>Image</th>
      </tr>
      <% @recipes.each do |recipe| %>
      <tr>
        <td><%= link_to recipe.title, "/recipes/#{recipe.id}" %></td>
        <td><%= recipe.chef %></td>
        <td><%= recipe.directions %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.prep_time %></td>
        <td> <img class="img-responsive thumbnail" src=<%= recipe.image %>></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>