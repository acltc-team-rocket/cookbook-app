<h1>Edit Recipe</h1>
<%= form_tag "/recipes/#{@id}", method: :patch do %>
  
  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>
  <div>
    <%= label_tag :chef %>
    <%= text_field_tag :chef %>
  </div>
  <div>
    <%= label_tag :ingredients %>
    <%= text_field_tag :ingredients %>
  </div>
  <div>
    <%= label_tag :directions %>
    <%= text_field_tag :directions %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :image, "Image URL" %>
    <%= text_field_tag :image %>
  </div>
  <div>
    <%= submit_tag "Update Recipe" %>
  </div>

<% end %>