<h1>New Recipe</h1>
<%= form_tag "/recipes", method: :post do %>
  
  <div>
    <%= label_tag :title %>
    <%= text_field_tag :title %>
  </div>
  <div>
    <%= label_tag :ingredients %>
    <%= text_field_tag :ingredients %>
  </div>
  <div>
    <%= label_tag :directions %>
    <%= text_field_tag :directions %>
  </div>
  <div>
    <%= label_tag :prep_time %>
    <%= text_field_tag :prep_time %>
  </div>
  <div>
    <%= label_tag :image, "Image URL" %>
    <%= text_field_tag :image %>
  </div>
  <div>
    <%= submit_tag "Create Recipe" %>
  </div>

<% end %>